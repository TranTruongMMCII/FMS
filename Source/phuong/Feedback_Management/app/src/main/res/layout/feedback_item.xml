<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/notroundbutton"
    android:backgroundTint="#ffeacb">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvFeedbackId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTitle"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/btnView"
            android:autofillHints="feedbackID"
            android:hint="FeedbackId" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAdminId"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/btnEdit"
            android:autofillHints="Title"
            android:hint="Title" />

        <TextView
            android:id="@+id/tvAdminId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp"
            android:layout_toStartOf="@+id/btnDelete"
            android:autofillHints="Title"
            android:hint="AdminId" />

        <TextView
            android:id="@+id/tvFeedbackIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvTitleLabel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/tvFeedbackId"
            android:text="Feedback ID:" />

        <TextView
            android:id="@+id/tvTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAdminIdLabel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/tvFeedbackId"
            android:text="Title:" />

        <TextView
            android:id="@+id/tvAdminIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="25dp"
            android:layout_toStartOf="@+id/tvFeedbackId"
            android:text="Admin ID:" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btnDelete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@android:color/holo_green_light"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@android:color/holo_red_light"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btnView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btnEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/purple_500"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_eye" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>